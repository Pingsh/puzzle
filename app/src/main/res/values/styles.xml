<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    -<style parent="android:Theme.Holo.Light" name="Theme.picker">

    <item name="android:editTextStyle">@style/Widget.EditText.White</item>

</style>


    -<style parent="@android:style/Widget.EditText" name="Widget.EditText.White">

    <item name="android:textColor">@color/setting_text_dark</item>

</style>


    -<style name="title_text_style">

    <item name="android:textColor">@color/title_text</item>

    <item name="android:textSize">22sp</item>

</style>


    -<style name="btn_style">

    <item name="android:background">@color/title_text</item>

    <item name="android:textColor">@color/main_bg</item>

    <item name="android:textSize">@dimen/text_btn</item>

</style>
</resources>
